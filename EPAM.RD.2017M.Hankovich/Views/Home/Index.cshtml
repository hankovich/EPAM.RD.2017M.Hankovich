<!DOCTYPE html>
<html ng-app="books">
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/scripts/IndexController.js"></script>
</head>
<body>
<header class="container well" ng-controller="RegisterController">
    <div class="col-md-6 row">

        <h1>Angular main page</h1>
        <!--<a href="AngularRoute/Index">Index</a> | <a href="AngularRoute/Gallery">Gallery</a> | <a href="AngularRoute/Add">Add Picture</a>
        <span ng-if="!isAuthenticated">| <a href="AngularRoute/Register">Register</a>
        </span>
        -->
        
        <div class="containerC">
            <a href="AngularRoute/Index">Index</a>
            <a href="AngularRoute/Gallery">Gallery</a>
            <div class="dropdownC">
                <button class="dropbtnC">Dropdown</button>
                <div class="dropdownC-content">
                    <a href="AngularRoute/Add">Add Picture</a>
                    <a href="AngularRoute/Index">Useless menu item 1</a>
                    <a href="AngularRoute/Gallery">Useless menu item 2</a>
                </div>
            </div>
            <span ng-if="!isAuthenticated">
                <a href="AngularRoute/Register">Register</a>
            </span>
        </div>


    </div>
    <div class="col-md-6">
        <h1></h1>
        <div ng-if="isAuthenticated" class="pull-right">Hello, <a ng-click="logoff()">{{userName}}</a></div>
        <div ng-if="!isAuthenticated" class="bottom-right vcenter">
            <div class="row">
                <div class="col-md-4" style="padding-right: 5px; padding-left: 5px;">
                    <input type="text" name="login" ng-model="registerModel.login" class="form-control" placeholder="Enter login" />
                </div>
                <div class="col-md-4" style="padding-right: 5px; padding-left: 5px;">
                    <input type="password" name="password" ng-model="registerModel.password" class="form-control" placeholder="Enter password"/>
                </div>
                <div class="col-md-4" style="padding-right: 5px; padding-left: 5px;">
                    <input type="button" value="Log in" ng-click="login()" class="form-control btn btn-success" />
                </div>
            </div>
        </div>
    </div>
</header>
    <div class="container">
        <div ng-view>Loading...</div>
    </div>
</body>
</html>

